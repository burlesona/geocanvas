source 'https://rubygems.org'

gem 'rails', '3.2.8'
gem 'thin'

gem 'haml-rails'
gem 'jquery-rails'
gem 'jetpack-rails', :git => 'git://github.com/burlesona/jetpack-rails.git'
gem 'simple_form'
gem 'rdiscount'

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

group :development, :test do
	gem 'sqlite3'
	gem 'minitest-rails'
	gem 'fabrication'
	gem 'guard-minitest'
end

group :production do
	gem 'pg'
end